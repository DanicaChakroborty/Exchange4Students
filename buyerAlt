    <script>
        function searchItems() {
            const input = document.getElementById('buyerSearch').value.toLowerCase();
            const items = document.getElementsByClassName('item');

            for (let item of items) {
                const text = item.textContent.toLowerCase();
                if (text.includes(input)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            }

            // Optional: Redirect to item page if exact match
            if (input === 'item 1') location.href = 'item1.html';
            if (input === 'item 2') location.href = 'item2.html';
            if (input === 'item 3') location.href = 'item3.html';
            if (input === 'item 4') location.href = 'item4.html';
            if (input === 'item 5') location.href = 'item5.html';
            if (input === 'item 6') location.href = 'item6.html';
        }
    </script>
